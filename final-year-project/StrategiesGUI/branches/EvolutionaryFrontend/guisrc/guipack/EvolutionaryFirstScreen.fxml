<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="500.0" minWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guipack.EvolutionarySettingsController">
   <children>
      <HBox prefHeight="500.0" prefWidth="900.0">
         <children>
            <VBox prefHeight="500.0" prefWidth="573.0">
               <children>
                  <AnchorPane fx:id="graphPane" minHeight="400.0" minWidth="563.0" prefHeight="450.0" prefWidth="563.0" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Number of Nodes:">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="nodeNumber" text="1" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <RadioButton fx:id="gridButton" mnemonicParsing="false" selected="true" text="Grid">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="graphType" />
                           </toggleGroup></RadioButton>
                        <RadioButton fx:id="circleGraphButton" mnemonicParsing="false" text="Circle" toggleGroup="$graphType" />
                        <RadioButton fx:id="starGraphButton" mnemonicParsing="false" text="Star" toggleGroup="$graphType">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="busGraphButton" mnemonicParsing="false" text="Bus" toggleGroup="$graphType">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="completeGraphButton" mnemonicParsing="false" text="Complete" toggleGroup="$graphType">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="bipartiteGraphButton" mnemonicParsing="false" text="Bipartite" toggleGroup="$graphType">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </RadioButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#backButton" text="Back">
                           <HBox.margin>
                              <Insets bottom="15.0" right="30.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Run">
                           <HBox.margin>
                              <Insets bottom="15.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <TableView fx:id="stratsTable" prefHeight="500.0" prefWidth="328.0">
              <columns>
                <TableColumn fx:id="strategyColumn" prefWidth="75.0" text="Strategy" />
                <TableColumn fx:id="colourColumn" prefWidth="75.0" text="Colour" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
